<!doctype html>
<html lang="en">
<head>
    <title>${app.name}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta charset="utf-8">
    <style>
        :root {
            --anchor-color: #0000EE;
        }

        a:link {
            color: var(--anchor-color);
        }

        a:active {
            color: var(--anchor-color);
        }

        a:visited {
            color: var(--anchor-color);
        }

        a:hover {
            color: var(--anchor-color);
        }
    </style>
</head>
<body>
<h1>Music Collection</h1>
<p>Select release to scrobble</p>
<ul>
    {{#releaseCollection}}
        {{#releases}}
            <li>
                {{artist}} - {{title}}{{#year}} ({{year}}){{/year}} <a href="/app/collection/release?id={{discogsId}}">Select</a>
            </li>
        {{/releases}}
    {{/releaseCollection}}
</ul>
</body>
</html>
