<!doctype html>
<html lang="en">
<head>
    <title>${app.name}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="icon" type="image/png" href="/favicon.png">
    <meta charset="utf-8">
    <script>
        function scrobble(id) {
            fetch("/app/collection/scrobble?id=" + id, {
                method: "POST"
            });
        }
    </script>
</head>
<body>
<h1>Music Collection</h1>
<p>Select release to scrobble</p>
<ul>
    {{#releaseCollection}}
        {{#releases}}
            <li>
                {{artist}} - {{title}} ({{year}})
                <button onclick="scrobble({{id}})">Scrobble</button>
            </li>
        {{/releases}}
    {{/releaseCollection}}
</ul>
</body>
</html>
